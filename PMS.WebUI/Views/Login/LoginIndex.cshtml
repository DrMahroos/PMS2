@*Sales*@
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<input type="hidden" id="CompaniesUrl" name="name" value="@Url.Action("GetCompanies","Login")" />
<input type="hidden" id="BranchsUrl" name="name" value="@Url.Action("GetBranchs","Login")" />
<input type="hidden" id="LoginUrl" name="name" value="@Url.Action("LoginSubmit","Login")" />
<input type="hidden" id="OnLogged" name="name" value="@Url.Action("OnLogged","Login")" />
<input type="hidden" id="GetAPIUrl" name="name" value="@System.Configuration.ConfigurationManager.AppSettings["ServiceUrl"]" />

<style>
    .form-control {
        margin: 10px;
    }


    .container2 .clock {
        width: 100% !important;
    }
</style>


<!--    ..............intro...............-->
<div class="intro">
    <div class="container2">
        <div class="clock">
            <div id="Date"></div>

            <ul id="ul_clock">
                <li id="hours"> </li>
                <li id="point">:</li>
                <li id="min"> </li>
                <li id="point">:</li>
                <li id="sec"> </li>
            </ul>

        </div>
    </div>
</div>

<!--    .........................login...............-->
<div class="container-fluid" style="padding:0%">
    <div class="content">
        <div id="large-header" class="large-header">
            <div id="center">
                <div class="container_login" id="divLogin" style="position: fixed;top: 25%;z-index: 100;left:29%;">
                    <div id="back_circle"></div>
                    <div id="content_login">
                        <div id="img_title">
                            <h1> System login</h1>
                        </div>
                        <div id="padding">
                            <div class="div_input"> <input type="text" class="login_input" id="txtUserName" placeholder="enter your Name"><span class="user"></span></div>
                            <div class="div_input">  <input type="password" class="login_input" id="txtUserPassword" placeholder="enter your Password"><span class="pass"></span></div>
                            <select id="cmbLanguage">
                                <option value="ar">عربي</option>
                                <option selected value="en">English</option>
                            </select>
                            <input type="number" class="login_input2" id="txtYear" placeholder="2020">

                            <div class="clear"></div>
                            <input type="checkbox" id="chkRemember">
                            <label>Remember me</label>
                            <input type="button" class="login_btn" id="btnLogin" value="Login">
                        </div>
                    </div>
                    <div class="clear"></div>
                    <div id="shadow"></div>
                    <div class="clear"></div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <!-- Related demos -->
</div><!-- /container -->
<!--    ..............intro...............-->
<!--    .........................login...............-->
<div class="container_login flip" id="divCompanies" style="display:none;position:fixed;z-index:100;top:25%;">
    <div id="back_circle" class="seclogin"></div>
    <div id="content_login">
        <div id="img_title">
            <h1 id="hLoggedName"> Mahamed Gamal Kotb</h1>
            <span id="spnLoggedYear" class="date_login"> 2014</span>
        </div>
        <div id="padding">
            <select class="se_login" id="cmbCompany" style="margin-top:30px;" name="CompCode"></select>
            <select class="se_login" id="cmbBranch" style="margin-top:15px;" name="Language"></select>
            <select class="se_login" id="cmbSubSys" style="margin-top:15px;" name="Language"></select>
            <div class="clear"></div>
            <div style="width: 270px;float: right;margin-top: -18px;">
                <input type="button" class="login_btn_back" id="btnBack" value="back" style="margin-top:25px;float: left;">
                <input type="submit" class="login_btn" id="btnOk" value="Enter" style="margin-top:25px;float: right;">
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div id="shadow"></div>
    <div class="clear"></div>
</div>
