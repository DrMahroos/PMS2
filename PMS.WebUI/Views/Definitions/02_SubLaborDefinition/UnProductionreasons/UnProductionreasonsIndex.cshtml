@using PMS.WebUI.Resources
@{
    ViewBag.ScreenKey = "UnProductionreasonsIndex";
    ViewBag.Title = SystemResource.Men_UnProductionreasons;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12 color1">
        @Html.ControlsButtons()
    </div>

    <div class="clear"></div>
    <div class="col-xs-12 dir" id="effects">
        <div style="height:5px"></div>
        <div class="clear"></div>
        <form>
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-2 col-sm-2 col-xs-12 control-label text-right">Reason Category</label>
                    <div class="col-md-2 col-sm-4 col-xs-5">
                        <input type="text" class="form-control input-sm" disabled="disabled" id="txtUnProdCategoryID" name="UnProdCategoryID">
                    </div>
                    <div class="col-md-1 col-xs-2">
                        <button type="button" class="btn btn-info" id="btnsearchCategory">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                    <div class="col-sm-4 col-xs-5">
                        <input type="text" class="form-control input-sm" disabled="disabled" id="txtcatName">
                    </div>
                </div>
            </div>
        </form>
        <table id="Grid"></table>

        <style>
            #grid {
                height: 250px !important;
            }

            .jsgrid-grid-body {
                height: 250px !important;
            }
        </style>

    </div>
    <script src="~/ClientApp/JsGrid.js"></script>
    @Html.Partial("../Partial/Navigator")
    <script src="~/ClientApp/Components/Definitions/02_SubLaborDefinition/UnProductionreasons.js"></script>
</div>


