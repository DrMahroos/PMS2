
@using PMS.WebUI.Resources
<script>

    $(".even_label").click(function () {
        $(".popsec").fadeOut();
    });

    $(".sec_cateogry_label").click(function () {
        $(".popsec").fadeIn();
    });
</script>
<link href="~/css/main.css" rel="stylesheet" />
<div class="clear"></div>

<label class="col-md-2" for="rpTitle" style="display:none" id="rpTitle">@SystemResource.Men_Customers</label>
<div class="form-horizontal">

    <div class="form-group">
        <label for="RDCustCard" class="col-md-2 col-sm-2 col-xs-12 control-label text-right even_label"> @SystemResource.CustomerCardRP</label>
        <input type="radio" name="RDCustCard" id="RDCustCard" value="option1" style="margin-left:30%;" checked="checked" class="category_input even_label">


        <label for="RDCustList" class="col-md-2 col-sm-2 col-xs-12 control-label text-right"> @SystemResource.CustomerListRP</label>
        <input type="radio" name="RDCustCard" id="RDCustList" value="option1" class="sec_cateogry_label">
    </div>
</div>
<div class="popsec">

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 col-xs-12 control-label text-right">@SystemResource.FromCustomerRP </label>
            <div class="col-md-1 col-sm-4 col-xs-5">
                <input type="number" class="form-control input-sm" disabled="disabled" id="txtCustomerCodeRP" name="CustomerCode">
                <input type="hidden" class="form-control input-sm" name="CustomerID" id="txtCustomerIDRP">
            </div>
            <div class="info-btn">
                <button class="btn btn-info addable editable" type="button" id="btnCustomerCodeRP">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
            <div class="col-md-2 col-sm-4 col-xs-5" style="width:21.5%;">

                <input type="text" class="form-control inpt-sm" disabled="disabled" id="txtCustomerNameRP">
            </div>

        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 col-xs-12 control-label text-right">@SystemResource.TOCustomerRP </label>
            <div class="col-md-1 col-sm-4 col-xs-5">
                <input type="number" class="form-control input-sm" disabled="disabled" id="txtCustomerCodeRP2" name="CustomerCode">
                <input type="hidden" class="form-control input-sm" name="CustomerID" id="txtCustomerIDRP2">
            </div>
            <div class="info-btn">
                <button class="btn btn-info addable editable" type="button" id="btnCustomerCodeRP2">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
            <div class="col-md-2 col-sm-4 col-xs-5" style="width:21.5%;">

                <input type="text" class="form-control inpt-sm" disabled="disabled" id="txtCustomerNameRP2">
            </div>

        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">

            <label class="col-md-2 col-sm-2 col-xs-12 control-label text-right"> @SystemResource.Fld_SalesEngineerId </label>
            <div class="col-md-1 col-sm-4 col-xs-5">
                <input class="form-control input-sm " disabled="disabled" name="SalesEngineerId" id="txtSalesEngineerIdRP">
                <input type="hidden" class="form-control input-sm " disabled="disabled" name="SalesEngineerId" id="txtSalesEngineerIdHRP">
            </div>
            <div class="info-btn">
                <button type="button" class="src-btn btn btn-warning addable editable" id="butEngCodeRP">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
            <div class="catin col-md-2 col-sm-4 col-xs-5">
                <input type="text" class="form-control inpt-sm " disabled="disabled" id="txtDescECatRP">
            </div>


        </div>
    </div>
    <div class="form-horizontal">

        <div class="form-group">
            <label class="col-md-2 col-sm-2 col-xs-12 control-label text-right"> @SystemResource.Fld_Bra </label>
            <div class="col-md-1 col-sm-4 col-xs-5">
                <input type="text" class="form-control input-sm" disabled="disabled" name="BraCode" id="txtBraCodeRP">
            </div>
            <div class="info-btn">
                <button type="button" class="btn btn-info src-btn btn btn-warning addable editable" id="btnAreaRP" name="btnAreaRP">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
            <div class="catin col-md-2 col-sm-4 col-xs-5">
                <input type="text" class="form-control inpt-sm " disabled="disabled" id="txtAreaNameRP" name="AreaName">
            </div>
        </div>
    </div>
    <div class="form-horizontal">

        <div class="form-group">
            <label class="col-md-2 col-sm-2 col-xs-12 control-label text-right"> @SystemResource.Men_CustomerCategory </label>
            <div class="col-md-1 col-sm-4 col-xs-5">
                <input type="text" class="form-control input-sm " disabled="disabled" id="txtCustomercCodeRP" name="CustomerCategoryID">
                <input type="hidden" class="form-control input-sm " disabled="disabled" id="txtCustomercIDRP" name="CustomerCategoryID">

            </div>
            <div class="info-btn">

                <button type="button" class="btn btn-info addable editable" id="btnCustomerCatRP" name="btnCustomerCatRP">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
            <div class="col-md-2 col-sm-4 col-xs-5" style="width:21.5%;">

                <input type="text" class="form-control inpt-sm" disabled="disabled" id="txtCustomerName1RP">
            </div>

        </div>

    </div>

    <div class="col-xs-9">

        <div class="col-xs-12 form-group radio_sec form-horizontal">
            <label class="area_label active_label"> @SystemResource.Fld_Active </label>
            <div class="col-lg-2 col-xs-3" style="color:#1cb3f9;">
                <input type="radio" id="ActiveRP" name="IsActive" value="option1">
                <label class="radio_report">@SystemResource.Fld_isActive</label>
            </div>
            <div class="col-lg-2 col-xs-3" style="color:green;">
                <input type="radio" id="NoActiveRP" name="IsActive" value="option1">
                <label class="radio_report">@SystemResource.Fld_isNoActive</label>
            </div>
            <div class="col-lg-2 col-xs-3" style="color:red;">
                <input type="radio" id="AllRP" name="IsActive" value="IsTemporary" checked="checked">
                <label class="radio_report">@SystemResource.Fld_allActive</label>
            </div>
        </div>
    </div>

    <div class="col-xs-9">

        <div class="col-xs-12 form-group radio_sec form-horizontal">
            <label class="area_label"> @SystemResource.Fld_Temporary </label>
            <div class="col-lg-2 col-xs-3" style="color:#1cb3f9;">
                <input type="radio" id="TempRP" name="IsTemporary" value="option1">
                <label class="radio_report">@SystemResource.Fld_Temporary</label>
            </div>
            <div class="col-lg-2 col-xs-3" style="color:green;">
                <input type="radio" id="NoTempRP" name="IsTemporary" value="option1">
                <label class="radio_report">@SystemResource.TempCustomer</label>
            </div>
            <div class="col-lg-2 col-xs-3" style="color:red;">
                <input type="radio" id="AllTempRP" name="IsTemporary" value="IsTemporary" checked="checked">
                <label class="radio_report">@SystemResource.Fld_all</label>
            </div>
        </div>
    </div>
</div>
<script src="~/ClientApp/JsGrid.js"></script>
<script src="~/ClientApp/GeneralReports/SlsCustomerReport.js"></script>
<script>
    $(document).ready(function () {
        SlsCustomerReport.InitalizeComponent();
    })
</script>
