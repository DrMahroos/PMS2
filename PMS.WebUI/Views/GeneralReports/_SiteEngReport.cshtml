@using PMS.WebUI.Resources

<link href="~/css/main.css" rel="stylesheet" />
<div class="clear"></div>

<label for="rpTitle" style="display:none" id="rpTitle">@SystemResource.Men_SiteEngineer</label>

<div class="form-horizontal">
	<div class="form-group">
		<label for="txtSiteEngCategoryId" class="col-md-2 col-sm-2 col-xs-12 control-label text-right"> @SystemResource.Fld_Categ</label>
		<div class="col-md-1 col-sm-4 col-xs-5">
			<input type="text" class="form-control input-sm" disabled="disabled" name="SiteEngCategoryId" id="txtSiteEngCategoryIdRp">
		</div>
		<div class="info-btn">
			<button type="button" class="src-btn btn btn-warning addable editable" id="butSiteEngCategoryIdRp" name="butSiteEngCategoryId">
				<i class="glyphicon glyphicon-search"></i>
			</button>
		</div>
		<div class="catin col-md-2 col-sm-4 col-xs-5">
			<input type="text" class="form-control inpt-sm " disabled="disabled" id="txtDescECatRp">
		</div>
	</div>
</div>
<div class="form-horizontal">
	<div class="form-group">
		<label class="col-md-2 col-sm-2 col-xs-12 control-label text-right"> @SystemResource.Fld_Bra </label>
		<div class="col-md-1 col-sm-4 col-xs-5">
			<input type="text" class="form-control input-sm" disabled="disabled" name="BraCode" id="txtBraCodeRp">
		</div>
		<div class="info-btn">
			<button type="button" class="btn btn-info src-btn btn btn-warning addable editable" id="btnAreaRp">
				<i class="glyphicon glyphicon-search"></i>
			</button>
		</div>
		<div class="catin col-md-2 col-sm-4 col-xs-5">
			<input type="text" class="form-control inpt-sm " disabled="disabled" id="txtAreaNameRp" name="AreaName">
		</div>
	</div>
</div>
<div class="col-xs-9">
	
	<div class="col-xs-12 form-group radio_sec form-horizontal">
		<label class="area_label"> @SystemResource.Fld_Active </label>
		<div class="col-lg-2 col-xs-3" style="color:#1cb3f9;">
			<input type="radio" id="ActiveRp" name="Active" value="option1">
			<label class="radio_report">@SystemResource.Fld_isActive</label>
		</div>
		<div class="col-lg-2 col-xs-3" style="color:green;">
			<input type="radio" id="NoActiveRp" name="Active" value="option1">
			<label class="radio_report">@SystemResource.Fld_isNoActive</label>
		</div>
		<div class="col-lg-2 col-xs-3" style="color:red;">
			<input type="radio" id="AllRp" name="Active" value="Active" checked="checked">
			<label class="radio_report">@SystemResource.Fld_allActive</label>
		</div>
	</div>
</div>
<script src="~/ClientApp/JsGrid.js"></script>
<script src="~/ClientApp/GeneralReports/SiteEngReport.js"></script>
<script>
	$(document).ready(function () {
		SiteEngReport.InitalizeComponent();
	})
</script>
