@using PMS.WebUI.Resources
<script>

	$(".even_label").click(function () {
	 $(".popsec").fadeOut();
	});

	$(".sec_cateogry_label").click(function () {
		$(".popsec").fadeIn();
	});
</script>
<link href="~/css/main.css" rel="stylesheet" />
<div class="clear"></div>

<label class="col-md-2" for="rpTitle" style="display:none" id="rpTitle">@SystemResource.Men_SalesItemLibrary</label>
<div class="form-horizontal">

	<div class="form-group">
		<label for="RDItemCard" class="col-md-2 col-sm-2 col-xs-12 control-label text-right even_label"> @SystemResource.ItemCardRP1</label>
		<input type="radio" name="RDItemCard" id="RDItemCard" value="option1" style="margin-left:30%;" checked="checked" class="category_input even_label">
		<label for="RDItemList" class="col-md-2 col-sm-2 col-xs-12 control-label text-right"> @SystemResource.ItemListRP1</label>
		<input type="radio" name="RDItemCard" id="RDItemList" value="option1" class="sec_cateogry_label">
	</div>
</div>
<div class="popsec">

	<div class="form-horizontal">
		<div class="form-group">
			<label class="col-sm-2 col-xs-12 control-label text-right">@SystemResource.FromItemRP1</label>
			<div class="col-md-1 col-sm-4 col-xs-5">
				<input type="text" class="form-control input-sm" disabled="disabled" id="txtItemCodeRP" name="ItemCode">
				<input type="hidden" class="form-control input-sm" name="ItemID" id="txtItemIDRP">
			</div>
			<div class="info-btn">
				<button class="btn btn-info addable editable" type="button" id="btnItemCodeRP">
					<i class="glyphicon glyphicon-search"></i>
				</button>
			</div>
			<div class="col-md-2 col-sm-4 col-xs-5" style="width:21.5%;">

				<input type="text" class="form-control inpt-sm" disabled="disabled" id="txtItemNameRP">
			</div>

		</div>
	</div>
	<div class="form-horizontal">
		<div class="form-group">
			<label class="col-sm-2 col-xs-12 control-label text-right">@SystemResource.ToItemRP2 </label>
			<div class="col-md-1 col-sm-4 col-xs-5">
				<input type="text" class="form-control input-sm" disabled="disabled" id="txtItemCodeRP2" name="ItemCode">
				<input type="hidden" class="form-control input-sm" name="CustomerID" id="txtItemIDRP2">
			</div>
			<div class="info-btn">
				<button class="btn btn-info addable editable" type="button" id="btnItemCodeRP2">
					<i class="glyphicon glyphicon-search"></i>
				</button>
			</div>
			<div class="col-md-2 col-sm-4 col-xs-5" style="width:21.5%;">

				<input type="text" class="form-control inpt-sm" disabled="disabled" id="txtItemNameRP2">
			</div>

		</div>
	</div>
	<div class="form-group">
		<label class="col-md-1 col-sm-2 col-xs-12 control-label text-right" style="padding-left:0%;"> @SystemResource.ScopDef_ScopeCode </label>
		<div class="col-md-1 col-sm-4 col-xs-5 textscopecode">
			<input type="hidden" class="form-control input-sm" disabled="disabled" id="txtScopeIDRP" name="ScopeID">
			<input type="text" class="form-control input-sm" disabled="disabled" id="txtScopeCodeRP">
		</div>
		<div class="info-btn">
			<button type="button" class="btn btn-info addable editable" id="btnScopeIDRP">
				<i class="glyphicon glyphicon-search"></i>
			</button>
		</div>
		<div class="col-md-2 col-sm-4 col-xs-5" style="width:21%;">
			<input type="text" class="form-control input-sm " disabled="disabled" id="txtScopeNameRP" name="ScopeName">
		</div>
	</div>
	<div class="col-xs-9">

		<div class="col-xs-12 form-group radio_sec form-horizontal">
			<label class="area_label active_label"> @SystemResource.Fld_Active </label>
			<div class="col-lg-2 col-xs-3" style="color:#1cb3f9;">
				<input type="radio" id="ActiveRP" name="IsActive" value="option1">
				<label class="radio_report">@SystemResource.Fld_isActive</label>
			</div>
			<div class="col-lg-2 col-xs-3" style="color:green;">
				<input type="radio" id="NoActiveRP" name="IsActive" value="option1">
				<label class="radio_report">@SystemResource.Fld_isNoActive</label>
			</div>
			<div class="col-lg-2 col-xs-3" style="color:red;">
				<input type="radio" id="AllRP" name="IsActive" value="IsTemporary" checked="checked">
				<label class="radio_report">@SystemResource.Fld_allActive</label>
			</div>
		</div>
	</div>

	<div class="col-xs-9">

		<div class="col-xs-12 form-group radio_sec form-horizontal">
			<label class="area_label"> @SystemResource.Fld_Detail
 </label>
			<div class="col-lg-2 col-xs-3" style="color:#1cb3f9;">
				<input type="radio" id="DetailRP" name="IsDetail" value="option1">
				<label class="radio_report">@SystemResource.Fld_Detail</label>
			</div>
			<div class="col-lg-2 col-xs-3" style="color:green;">
				<input type="radio" id="NoDetailRP" name="IsDetail" value="option1">
				<label class="radio_report">@SystemResource.parentitemRp</label>
			</div>
			<div class="col-lg-2 col-xs-3" style="color:red;">
				<input type="radio" id="AllDetailRP" name="IsDetail" value="IsDetail" checked="checked">
				<label class="radio_report">@SystemResource.Fld_all</label>
			</div>
		</div>
	</div>
</div>
<script src="~/ClientApp/JsGrid.js"></script>
<script src="~/ClientApp/GeneralReports/SlsItemReport.js"></script>
<script>
		$(document).ready(function () {
			SlsItemReport.InitalizeComponent();
		})
</script>
