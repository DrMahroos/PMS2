                            <input type="date" class="form-control input-sm addable editable Dateable" style="width: 135px;" name="TrDate" id="txtTrDate">
                            <input type="checkbox" class="checkdef onprojec_check col-xs-5 editable" style="margin-left:-13%;height: 0px;margin-top: 12px;" id="ChkStatus" name="Status" value="">
                            
                        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12">
                            <button class="authorize" id="btnReopen" type="button" disabled="disabled"  style="margin-left: 32px;" > @SystemResource.Fld_Reopen </button>
                           
                        </div>
                    </div>
				</div>

				<div class="form-horizontal">
					<div class="form-group">
						<label for="txtDescE" class="col-sm-2 col-xs-12 control-label text-right"> @SystemResource.Eng_project </label>
						<div class="col-sm-1 col-xs-12 project_expense">
                            <input type="hidden" class="form-control input-sm" name="ProjectID" id="txtProjectID">
							<input type="text" maxlength="100"  class="addable editable form-control input-sm clearable" name="Proj_Code" id="txtProj_Code" />
						</div>

						<div class="info-btn col-md-1">
							<button type="button" class="src-btn btn btn-warning addable editable fst_serach_proj" id="butProj_Code" name="butProj_Code">
								<i class="glyphicon glyphicon-search"></i>
							</button>
						</div>

						<div class="col-md-2 col-sm-4 col-xs-12">
							<input type="text" maxlength="20" disabled="disabled" style="width: 448px!important;" class="form-control input-sm sub_contr_sub clearable op_project_input" name="Proj_DescE" id="txtProj_Desc" />
						</div>

                       
					</div>
				</div>


				<div class="form-horizontal">
					<div class="form-group">
						<label for="txtDescE" class="col-sm-2 col-xs-12 control-label text-right"> @SystemResource.Def_projecphase</label>
						<div class="col-sm-1 col-xs-12 project_expense">
                            <input type="hidden" class="form-control input-sm" name="ProjectPhaseId" id="txtProjectPhaseId">
							<input type="text" maxlength="100"  class="addable editable form-control clearable input-sm " name="Phase_code" id="txtPhase_code" />
						</div>

						<div class="info-btn col-md-1">
							<button type="button" class="src-btn btn btn-warning addable editable fst_serach_proj" id="butPhase_code" name="butPhase_code">
								<i class="glyphicon glyphicon-search"></i>
							</button>
						</div>

						<div class="col-md-2 col-sm-4 col-xs-12">
							<input type="text" maxlength="20" disabled="disabled" style="width: 448px!important;" class="form-control input-sm sub_contr_sub clearable op_project_input" name="Phase_DescE" id="txtPhase_Desc" />
						</div>

					</div>
				</div>





				<div class="form-horizontal">
                    <div class="form-group">
                        <label for="txtDescE" class="col-sm-2 col-xs-12 control-label text-right"> @SystemResource.Off_Remark </label>
                        <div class="col-sm-4 col-xs-12" style="width: 407px;">
                            <input type="text" maxlength="100" class="form-control input-sm addable editable" name="Remarks" id="txtRemarks" />
                        </div>

                        <div class="col-md-6 total_expense">
                            <label for="txtEngCode" class="col-sm-2 col-xs-12 control-label text-right trans_btn op_total_label"> @SystemResource.Off_StTotal </label>
                            <div class="col-md-3 col-sm-4 col-xs-5">
                                <input type="text" disabled="disabled" class="form-control input-sm" style="width: 135px;" name="TotalAmount" id="txtTotalAmount">
                            </div>
                        </div>
                        
                    </div>
				</div>


				<div class="col-xs-12 form-horizontal" id="Projectexpense">
