@using PMS.WebUI.Resources

<div class="row">
    <div class="col-xs-12 color1">

    </div>
    <div class="clear"></div>
    <label for="rpTitle" style="display:none" id="rpTitle">@SystemResource.Men_SubContractorActivity</label>
    <form class="col-xs-12">
        <div class="col-xs-12">

            <div class="form-horizontal">
                <div class="form-group">
                    <label for="txtDescE" class="col-sm-2 col-xs-12 control-label text-right"> @SystemResource.Fld_FromDate </label>
                    <div class="col-sm-2 col-xs-12" style="width:142px;">
                        <input type="Date" maxlength="100" class="form-control input-sm addable editable" name="FromDate" id="FromDate" />
                    </div>

                    <label for="txtDescE" class="col-sm-2 col-xs-12 control-label text-right" style="width: 82px;"> @SystemResource.Fld_ToDate </label>
                    <div class="col-sm-2 col-xs-12" style="width:142px;">
                        <input type="Date" maxlength="100" class="form-control input-sm addable editable" name="ToDate" id="ToDate" />
                    </div>

                        <label for="txtDescE" class="col-sm-1 col-xs-12 control-label text-right"> @SystemResource.Mast_project</label>
                        <div class="col-sm-1 col-xs-12" style="width: 96px;">
                            <input type="hidden" class="form-control input-sm" name="projectID" id="txtprojectID">
                            <input type="text" maxlength="100" class="form-control input-sm addable editable" name="txtprojectRP" id="txtprojectRP" disabled/>
                        </div>

                        <div class="info-btn col-md-1" style="width:40px;">
                            <button type="button" class="src-btn btn btn-warning xaddable xeditable fst_serach_proj" id="butprojectRP" name="butprojectRP">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>

                        <div class="col-md-3 col-sm-4 col-xs-12">
                            <input type="text" maxlength="20" class="form-control input-sm addable editable" name="txtproject1RP" id="txtproject1RP" disabled/>
                        </div>

                </div>
            </div>



            <div class="form-horizontal">
                <div class="form-group">
                    <label for="txtDescE" class="col-sm-2 col-xs-12 control-label text-right"> @SystemResource.work_subcontr</label>
                    <div class="col-sm-1 col-xs-12">
                        <input type="hidden" class="form-control input-sm" name="subcontrID" id="txtsubcontrID">
                        <input type="text" maxlength="100" class="form-control input-sm addable editable" name="txtsubcontrRP" id="txtsubcontrRP" disabled/>
                    </div>

                    <div class="info-btn col-md-1" style="width:37px;">
                        <button type="button" class="src-btn btn btn-warning xaddable xeditable fst_serach_proj" id="butsubcontrRP" name="butsubcontrRP">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>

                    <div class="col-md-2 col-sm-4 col-xs-12" style="width: 236px;">
                        <input type="text" maxlength="20" class="form-control input-sm addable editable" name="txtsubcontr1RP" id="txtsubcontr1RP" disabled/>
                    </div>

                        <label for="txtDescE" class="col-sm-1 col-xs-12 control-label text-right"> @SystemResource.Def_projecphase</label>
                    <div class="col-sm-1 col-xs-12" style="width: 96px; margin-left:-3px;">
                        <input type="hidden" class="form-control input-sm" name="phaseRPID" id="txtphaseRPID">
                        <input type="text" maxlength="100" class="form-control input-sm addable editable" name="txtphaseRP" id="txtphaseRP" disabled/>
                    </div>

                    <div class="info-btn col-md-1" style="width:40px;">
                        <button type="button" class="src-btn btn btn-warning xaddable xeditable fst_serach_proj" id="butphaseRP" name="butphaseRP">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>

                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <input type="text" maxlength="20" class="form-control input-sm addable editable" name="txtphase1RP" id="txtphase1RP" disabled/>
                    </div>

                </div>
            </div>



            <div class="form-horizontal">
                <div class="form-group" style="height: 27px;">
                    <div class="col-md-6" style="padding: 0px;width: 505px;">
                         <div class="col-md-2 col-xs-12" style="width: 159px;">
                             <label class="control-label text-right subcontractor_label">Show Contracts</label>
                             <input type="radio" name="RDProdcVsBill" id="RDByShowContracts" value="1"  />
                         </div>
                        <div class="col-md-2 col-xs-12" style="width: 164px;padding: 0px;">
                            <label class="control-label text-right subcontractor_label">Show Service Order</label>
                            <input type="radio" name="RDProdcVsBill" id="RDByServiceOrder" value="2"  />
                        </div>
                        <div class="col-md-2 col-xs-12" style="width: 182px;padding: 0px;">
                            <label class="control-label text-right subcontractor_label">Show Production Entry</label>
                            <input type="radio" name="RDProdcVsBill" id="RDByProductionEntry" value="3" />
                        </div>
                        </div>

                        <label for="txtDescE" class="col-sm-1 col-xs-12 control-label text-right"> @SystemResource.def_enginer</label>
                    <div class="col-sm-1 col-xs-12" style="width: 96px;">
                        <input type="hidden" class="form-control input-sm" name="enginerRPID" id="txtenginerRPID">
                        <input type="text" maxlength="100" class="form-control input-sm addable editable" name="txtenginerRP" id="txtenginerRP" disabled/>
                    </div>

                    <div class="info-btn col-md-1" style="width:40px;">
                        <button type="button" class="src-btn btn btn-warning xaddable xeditable fst_serach_proj" id="butenginerRP" name="butenginerRP">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>

                        <div class="col-md-3 col-sm-4 col-xs-12">
                            <input type="text" maxlength="20" class="form-control input-sm addable editable" name="txtenginer1RP" id="txtenginer1RP"disabled />
                        </div>

                </div>
            </div> 


            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6" style="padding: 0px;width: 0px;">
                    </div>

                        <label for="txtDescE" class="col-sm-1 col-xs-12 control-label text-right"> @SystemResource.Fld_UpdatedBy</label>
                    <div class="col-sm-1 col-xs-12" style="width: 96px;">
                        <input type="hidden" class="form-control input-sm" name="ContactRPID" id="txtContactRPID">
                        <input type="text" maxlength="100" class="form-control input-sm addable editable" name="txtContactRP" id="txtContactRP" disabled/>
                    </div>

                    <div class="info-btn col-md-1" style="width:40px;">
                        <button type="button" class="src-btn btn btn-warning xaddable xeditable fst_serach_proj" id="butContactRP" name="butContactRP">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>

                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <input type="text" maxlength="20" class="form-control input-sm addable editable" name="txtContact1RP" id="txtContact1RP" disabled/>
                    </div>

                </div>
            </div>



            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6" style="padding: 0px;width: 505px;">
                    </div>


                        <label for="txtDescE" class="col-sm-1 col-xs-12 control-label text-right"> @SystemResource.def_scope</label>
                    <div class="col-sm-1 col-xs-12" style="width: 96px;">
                        <input type="hidden" class="form-control input-sm" name="scopeRPID" id="txtscopeRPID">
                        <input type="text" maxlength="100" class="form-control input-sm addable editable" name="txtscopeRP" id="txtscopeRP" disabled/>
                    </div>

                    <div class="info-btn col-md-1" style="width:40px;">
                        <button type="button" class="src-btn btn btn-warning xaddable xeditable fst_serach_proj" id="butscopeRP" name="butscopeRP">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>

                        <div class="col-md-3 col-sm-4 col-xs-12">
                            <input type="text" maxlength="20" class="form-control input-sm addable editable" name="txtscope1RP" id="txtscope1RP" disabled/>
                        </div>

                </div>
            </div>

            <div class="col-xs-12 form-horizontal" id="contractsec">
                <style>
                    .jsgrid-grid-body {
                        height: 450px !important;
                        background-color: #ddd;
                    }
                </style>

                <table id="contractgrid"></table>
            </div>

            <div class="col-xs-12 form-horizontal" id="serviceordersec">
                <style>
                    .jsgrid-grid-body {
                        height: 450px !important;
                        background-color: #ddd;
                    }
                </style>

                <table id="serviceordergrid"></table>
            </div>

            <div class="col-xs-12 form-horizontal" id="productionentry">
                <style>
                    .jsgrid-grid-body {
                        height: 450px !important;
                        background-color: #ddd;
                    }
                </style>

                <table id="productionentrygrid"></table>
            </div>
        </div>
    </form>

    <script src="~/ClientApp/Components/Engineer/04_SubContractorReports/SubContractorActivity.js"></script>
</div>



