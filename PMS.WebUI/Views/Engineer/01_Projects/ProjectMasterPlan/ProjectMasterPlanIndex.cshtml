@using PMS.WebUI.Resources
@{
	ViewBag.ScreenKey = "ProjectMasterPlanIndex";
	ViewBag.Title = SystemResource.Men_ProjectMasterPlan;
	Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="row">
	<div class="col-xs-12 color1">
		@Html.ControlsButtons()
	</div>
	<div class="clear"></div>
	<div class="col-xs-12 dir" id="effects">
		<form>
			<div class="col-xs-12">
				<div class="form-horizontal">
					<div class="form-group">
                        <div class="col-md-6" style="padding: 0px;">
                            <label for="" class="col-sm-3 col-xs-12 control-label text-right"> @SystemResource.Mast_project </label>
                            <div class="col-md-2 col-sm-4 col-xs-5" style="width: 125px;">
                                <input type="hidden" name="ProjID" id="txtProjID">
                                <input type="hidden" name="CalenderID" id="txtCalenderID">
                                
                                <input type="hidden" class="clearable" name="ProjectPhaseId" id="h_ProjectPhaseId">
                                <input type="hidden" name="ProjectID" id="h_ProjectID">
                                <input type="hidden" name="OfferID" id="h_OfferID">
                                <input type="hidden" name="SiteEngineerId" id="h_SiteEngineerId">
                                <input type="hidden" name="ScopeID" id="h_ScopeID">
                                <input type="hidden" name="CalenderId" id="h_CalenderId">
                                
                                <input type="text" class="form-control input-sm  xeditable xaddable" name="ProjectCode" id="txtProjectCode">
                            </div>
                            <div class="info-btn spec_search" style="width: 23px;">
                                <button type="button" class="src-btn btn btn-warning  xeditable fst_serach_proj" id="btnProjectCode">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                            <div class="col-md-6 col-xs-12" style="width: 267px;">
                                <input type="text" class="form-control input-sm  editable" name="DescA" id="txtDescA">
                            </div>
                        </div>
						<div class="col-md-6 col-sm-2 col-xs-6 right_field">
							<label for="" class="col-sm-3 col-xs-12 control-label text-right"> @SystemResource.Spec_Workhours </label>
							<div class="col-md-3 col-sm-4 col-xs-12">
								<input type="text" maxlength="20" class="form-control input-sm clearable" disabled="disabled"  id="txtPhaseCode" />
							</div>
							<label for="" class="col-sm-3 col-xs-12 control-label text-right"> @SystemResource.Mast_breaking_start </label>
							<div class="col-md-3 col-sm-4 col-xs-12">
								<input type="text" maxlength="20" class="form-control input-sm  editable" name="BreakingStartTime" id="txtBreakingStartTime" />
							</div>
                            
						</div>
					</div>
				</div>
				<div class="form-horizontal">
					<div class="form-group">
                        
                        <div class="col-md-6" style="padding: 0px;">
                            <label for="" class="col-sm-3 col-xs-12 control-label text-right"> @SystemResource.Mast_start_date </label>
                            <div class="col-sm-2 col-xs-12" style="width: 169px;">
                                <input type="date" maxlength="100" class="form-control input-sm " name="StartDate" id="txtStartDate" />
                            </div>
                            <label for="" class="col-sm-2 col-xs-12 control-label text-right" style="width: 91px;"> @SystemResource.Mast_end_date </label>
                            <div class="col-sm-2 col-xs-12" style="width: 169px;">
                                <input type="date" maxlength="100" class="form-control input-sm " name="EndDate" id="txtEndDate" />
                            </div>
                        </div>
                           
						<div class="col-md-6 col-sm-2 col-xs-6 right_field">
							<label for="" class="col-sm-3 col-xs-12 control-label text-right"> @SystemResource.Mast_start_time </label>
							<div class="col-md-3 col-sm-4 col-xs-12">
								<input type="text" maxlength="20" class="form-control input-sm  editable" name="StartTime" id="txtItemCode" />
							</div>
						<label for="" class="col-sm-3 col-xs-12 control-label text-right"> @SystemResource.Mast_breaking_End </label>
							<div class="col-md-3 col-sm-4 col-xs-12">
								<input type="text" maxlength="20" class="form-control input-sm  editable" name="BreakingEnd" id="txtBreakingEnd" />
							</div>
						</div>
					</div>
				</div>
				<div class="form-horizontal">
					<div class="form-group">
					
					</div>
				</div>
				<div class="export">
					<button type="button" class="Export_btn" id="btnExportToExcel">Export To Excel</button>
					<button type="button" class="plan_btn pull-right" id="btnDraw"> Draw </button>
				</div>

                <div class="ani col-xs-12 form-group" style="margin-bottom:0%;">
                    <hr style="padding:0%;margin:0%;border-top: 1px dotted #0b6d8a;margin-top" class="col-xs-12">
                    <div class="col-xs-4">
                        <i class="col-xs-12 fa fa-hand-o-down off" aria-hidden="true"></i>
                    </div>
                    <div class="col-xs-4">
                        <i class="col-xs-12 fa fa-hand-o-down off" aria-hidden="true"></i>
                    </div>
                    <div class="col-xs-4">
                        <i class="col-xs-12 fa fa-hand-o-down off" aria-hidden="true"></i>
                    </div>
                </div>
                <div class="col-xs-12 form-group" style="margin-top:0%;margin-bottom:0%;">
                    <div class="col-xs-4">
                        <button class="col-xs-12 btn btn-info btn_def btn_parent" type="button" id="btnPhases"> @SystemResource.Eng_ProjectPhases</button>
                    </div>
                    <div class="col-xs-4">
                        <button class="col-xs-12 btn btn-info btn_def btn_child" type="button" id="btnItems"> @SystemResource.Eng_PhaseItems</button>
                    </div>
                    <div class="col-xs-4">
                        <button class="col-xs-12 btn btn-info btn_def_item btn_childChild" type="button" id="def_item_btn"> @SystemResource.Eng_ItemActivities </button>
                    </div>
                </div>

				<div class="col-xs-12 form-horizontal" id="parentgrid">
					<style>
						#grid {
							height: 312px;
						}

						.jsgrid-grid-body {
							height: 300px!important;
						}
					</style>
                    <div class="form-group" style="height: 380px;overflow:unset">
                        <table id="GridPhase"></table>
                    </div>
				</div>
				<div class="col-xs-12 form-horizontal" id="parentchild">
					<style>
						#grid {
							height: 312px;
						}
						.jsgrid-grid-body {
							height: 300px!important;
						}
					</style>
                    <div class="form-group"  style="height: 380px;overflow:unset">
                        <table id="GridItem"></table>
                    </div>
                    </div>
                <div class="col-xs-12 form-horizontal" id="parentchildchild" >
                    <style>
                        #grid {
                            height: 312px;
                        }

                        .jsgrid-grid-body {
							height: 300px!important;
                        }
                    </style>
                    <div class="form-group" style="height: 380px;overflow:unset">
                        <table id="GridActivity"></table>
                    </div>
                </div>
			</div>
		</form>
	</div>
	
	<script src="~/ClientApp/JsGrid.js"></script>
	@Html.Partial("../Partial/Navigator")
    <script src="~/ClientApp/Components/Engineer/01_Projects/ProjectMasterPlan.js"></script>
</div>

<style>
     .form-group{
        background-color:transparent!important;
        box-shadow:none!important;
    }

</style>